{
  "manifest_version": 3,
  "name": "DemoDojo Screen Recorder",
  "version": "1.0.0",
  "description": "Create beautiful screen recordings with just a few clicks",
  "permissions": [
    "desktopCapture",
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "src/assets/icon16.png",
      "32": "src/assets/icon32.png"
    }
  },
  "icons": {
    "16": "src/assets/icon16.png",
    "32": "src/assets/icon32.png"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/content.ts"
      ]
    }
  ]
}